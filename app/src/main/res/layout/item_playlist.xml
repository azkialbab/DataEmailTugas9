<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="8dp">

    <!-- ImageView for Movie Poster -->
    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corners" />

    <!-- LinearLayout for Movie Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:paddingVertical="8dp">

        <!-- Movie Title -->
        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <!-- Duration and Age Restriction -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="start">

            <TextView
                android:id="@+id/movieDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 min"
                android:textSize="12sp"
                android:textColor="@color/grey_light"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/movieAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PG-13"
                android:textSize="12sp"
                android:textColor="@color/grey_light" />
        </LinearLayout>

        <!-- LinearLayout for Rating and Delete Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- RatingBar -->
            <RatingBar
                android:id="@+id/movieRatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="4.0"
                android:numStars="5"
                android:stepSize="0.5"
                android:progressTint="@color/red"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:isIndicator="true"
                android:layout_weight="1" />

            <!-- Delete Icon -->
            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete Icon"
                app:tint="@color/red"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
