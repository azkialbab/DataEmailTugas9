<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Toolbar with Netflix Logo -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Netflix Logo -->
        <ImageView
            android:id="@+id/netflixLogo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:contentDescription="Netflix Logo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Profile Header Text -->
    <TextView
        android:id="@+id/profileHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Netflix Profile, Your World!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView to make content scrollable -->
    <android.widget.ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profileHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logoutButton">

        <!-- Profile Content -->
        <LinearLayout
            android:id="@+id/profileContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Profile Photo with rounded border -->
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/profilePhoto"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/sample"
                android:contentDescription="Profile Photo"
                android:layout_marginBottom="16dp"
                app:riv_corner_radius="300dp"
                android:layout_marginTop="24dp" />

            <!-- Username Text placed below profile photo -->
            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp" />

            <!-- Email Text inside shape, centered -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Email: "
                    android:textSize="18sp"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    android:background="@drawable/input_background"
                    android:gravity="center" />
            </FrameLayout>

            <!-- Phone Text inside shape, centered -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/phoneTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Phone: "
                    android:textSize="18sp"
                    android:padding="4dp"
                    android:textColor="@color/gray"
                    android:background="@drawable/input_background"
                    android:gravity="center" />
            </FrameLayout>

        </LinearLayout>
    </android.widget.ScrollView>

    <!-- Logout Button with rounded corners -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="16dp"
        android:text="Logout"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:padding="12dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
